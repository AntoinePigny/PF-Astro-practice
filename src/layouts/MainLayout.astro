---
import MainHead from './MainHead.astro'
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
const { title, seoTitle, seoDesc } = Astro.props
import '@fontsource/quattrocento-sans'
import '@fontsource/taviraj/900.css'
// Supports weights 400-900
import '@fontsource-variable/bodoni-moda'
---

<!DOCTYPE html>
<html class="scroll-smooth">
   <MainHead title={title} seoTitle={seoTitle} seoDesc={seoDesc} />
   <body class="bg-slate text-txtwhite grid gap-0 ">
      <Navbar />
      <slot />
      <style>
         body {
            min-height:100dvh
         }
      </style>
   </body>
   <Footer/>
</html>
